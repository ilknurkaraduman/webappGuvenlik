@model List<WebAppGuvenlik.Models.Employee.StatusModel>

@{
    ViewBag.Title = "ViewReject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<p></p>
<a class="btn btn-success" href="/Employee/ViewVisitors" role="button"><i class="fa fa-mail-reply"> Back to List</i></a>
<p></p>
<h5>Rejected</h5>
<p></p>
<table class="table">
    <tr>
        @*<th>
                Visitor ID
            </th>*@
        <th>
            Visitor Name
        </th>
        <th>
            Visitor's Description
        </th>
        <th>
            Status Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.VisitorID)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.VisitorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td @(item.Name == "rejected" ? "style=background-color:red" : "")>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Send Description", "SendDescription", new { id = item.ID }) |
            </td>
        </tr>
    }

</table>


