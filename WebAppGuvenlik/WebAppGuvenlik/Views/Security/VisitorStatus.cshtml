@model List<WebAppGuvenlik.Models.Employee.StatusModel>

@{
    ViewBag.Title = "VisitorStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<p></p>
<a class="btn btn-success" href="/Security/Visitors" role="button">Back to List</a>
<p></p>
<h5>Visitor's Status</h5>

<table class="table">
    <tr>
        <th>
            Visitor Name
        </th>
        <th>
            Description
        </th>
        <th>
            EndDate
        </th>
        <th>
            Status Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>  
            <th>
                @Html.DisplayFor(modelItem => item.VisitorName)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td @(item.Name == "rejected" ? "style=background-color:red" : "")
                @(item.Name == "confirmed" ? "style=background-color:#76b852" : "")
                @(item.Name == "waiting" ? "style=background-color:yellow" : "")>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>
